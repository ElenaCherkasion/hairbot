{
  "name": "hairbot",
  "version": "1.0.0",
  "description": "Telegram бот для анализа формы лица и подбора стрижек с использованием OpenAI",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest --passWithNoTests",
    "lint": "eslint .",
    "format": "prettier --write .",
    "setup": "npm install && npm run db:create && npm run db:seed",
    "db:create": "node scripts/create-tables.js",
    "db:seed": "node scripts/seed-database.js",
    "db:backup": "node scripts/backup-db.js",
    "db:migrate": "node scripts/migrate-db.js",
    "webhook:setup": "node scripts/setup-webhook.js",
    "webhook:info": "node scripts/setup-webhook.js info",
    "webhook:delete": "node scripts/setup-webhook.js delete",
    "health": "node scripts/check-health.js",
    "clean": "rm -rf node_modules logs backups",
    "deploy": "npm run lint && npm test && npm start",
    "docker:build": "docker build -t hairbot .",
    "docker:run": "docker run -p 3000:3000 --env-file .env hairbot"
  },
  "keywords": [
    "telegram",
    "bot",
    "hair",
    "stylist",
    "ai",
    "openai",
    "face-analysis",
    "haircut",
    "beauty",
    "fashion"
  ],
  "author": "Your Name <cherkashina720@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/hairbot.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/hairbot/issues"
  },
  "homepage": "https://github.com/your-username/hairbot#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "dotenv": "^16.3.1",
    "mysql2": "^3.6.0",
    "openai": "^4.20.0",
    "winston": "^3.11.0",
    "helmet": "^7.0.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.53.0",
    "prettier": "^3.0.3",
    "jest": "^29.7.0",
    "@types/node": "^20.8.0"
  },
  "optionalDependencies": {
    "sqlite3": "^5.1.6"
  },
  "publishConfig": {
    "access": "public"
  },
  "funding": {
    "type": "individual",
    "url": "https://t.me/hairbot_support"
  }
}
